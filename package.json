{
  "name": "package-skeleton",
  "version": "1.0.5",
  "description": "Skeleton of a simple NPM Package with Babel and CI already configured.",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/amercier/npm-package-skeleton"
  },
  "author": "Alex Mercier <pro.alexandre.mercier@gmail.com> (http://amercier.com)",
  "engines": {
    "node": ">=6",
    "npm": ">=3"
  },
  "scripts": {
    "build:clean": "rimraf dist",
    "build:transpile": "babel --ignore *.spec.js -d dist src",
    "build": "run-s build:*",
    "prepublishOnly": "run-s build",
    "doc:clean": "rimraf esdoc",
    "doc:generate": "esdoc",
    "doc": "run-s doc:*",
    "lint": "eslint --ignore-path .gitignore .",
    "start": "cross-env NODE_ENV=development jest --watch --notify",
    "test": "jest",
    "pre-commit": "run-p lint 'test -- --lastCommit'"
  },
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "keywords": [
    "package",
    "skeleton",
    "example",
    "node",
    "npm",
    "babel",
    "ci",
    "code",
    "codecov",
    "coverage",
    "eslint",
    "gemnasium",
    "jest"
  ],
  "dependencies": {},
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/register": "^7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "codecov": "^3.0.4",
    "cross-env": "^5.2.0",
    "esdoc": "^1.1.0",
    "esdoc-standard-plugin": "^1.0.0",
    "eslint": "^5.4.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "jest": "^23.5.0",
    "npm-run-all": "^4.1.3",
    "pre-commit": "^1.2.2",
    "rimraf": "^2.6.2"
  },
  "pre-commit": [
    "pre-commit"
  ],
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "0.10"
          }
        }
      ]
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "coverageReporters": [
      "lcov",
      "text",
      "html"
    ]
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "env": {
      "browser": false
    },
    "overrides": [
      {
        "files": [
          "*.spec.js"
        ],
        "env": {
          "jest": true
        },
        "rules": {
          "import/no-extraneous-dependencies": [
            "error",
            {
              "devDependencies": true
            }
          ]
        }
      }
    ]
  },
  "esdoc": {
    "source": "./src",
    "destination": "./esdoc",
    "plugins": [
      {
        "name": "esdoc-standard-plugin"
      }
    ]
  }
}
